extends base

block content
  main.main
    .initial-form.forgotpass-form
      h2.heading-secondary.ma-bt-lg Enter your email to get a password reset link
      form.form.form--forgotpass
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          button.btn.btn--green#send-reset-btn Send reset link